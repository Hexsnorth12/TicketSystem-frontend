{
    "compilerOptions": {
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "target": "es2015",
        "downlevelIteration": true,
        "skipLibCheck": true,
        "strict": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@images/*": ["./public/assets/*"],
            "@icon/*": ["./public/assets/icon/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts",
        "src/components/common/Pagination/pagination.stories.jsx",
        "node_modules/@types"
    ],
    "exclude": ["node_modules"],
    "tsc-alias": {
        "resolveFullPaths": true
    }
}
